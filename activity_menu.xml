<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menubackground"
    tools:context="com.superjb.mycolloc.MenuActivity">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bEtat"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:background="@drawable/some_selector_name"
            android:scaleType="center"
            android:src="@drawable/etat2" />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bCourses"

            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="center"
            android:background="@drawable/some_selector_name"
            android:src="@drawable/courses2" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bNotes"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="center"
            android:background="@drawable/some_selector_name"
            android:src="@drawable/notes2" />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bHistorique"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="center"
            android:background="@drawable/some_selector_name"
            android:src="@drawable/historique2" />


    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bTours"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="center"
            android:background="@drawable/some_selector_name"
            android:src="@drawable/tours2" />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bCalendrier"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="center"
            android:background="@drawable/some_selector_name"
            android:src="@drawable/calendrier2" />
    </LinearLayout>

</LinearLayout>
