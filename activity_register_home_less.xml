<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menubackground"
    tools:context="com.superjb.mycolloc.RegisterHomeLessActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etColocName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#80ffffff"
        android:textColor="#ffffff"
        android:hint="Nom de la Coloc !"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Mot de Passe"
        android:layout_below="@+id/etColocName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textColorHint="#80ffffff"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer"
        android:id="@+id/bRegister"
        android:layout_marginTop="81dp"
        android:layout_alignRight="@+id/etRepeatPassword"
        android:layout_alignEnd="@+id/etRepeatPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#fbafaf"
        android:layout_below="@+id/etRepeatPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etRepeatPassword"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#80ffffff"
        android:textColor="#ffffff"
        android:hint="Répétez le Mot de Passe" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Présence de Pot Commun"
        android:id="@+id/checkBox"
        android:ems="10"
        android:textColor="#ffffff"
        android:checked="false"
        android:layout_below="@+id/etRepeatPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etRepeatPassword"
        android:layout_alignEnd="@+id/etRepeatPassword" />

</RelativeLayout>




